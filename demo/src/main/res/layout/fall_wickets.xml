<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:background="@drawable/new_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scorecard"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/share_selector"
            android:id="@+id/back"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/add"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#293a44"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1.3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/team1NameScorefallwic"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_weight="1.3"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/team2NameScorefallwic"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            />




    </LinearLayout>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    </com.astuetz.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerfallwickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />
</LinearLayout>