<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293a44"
    >
    <LinearLayout
        android:background="#276B98"
        android:padding="0dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="12sp"
            android:background="#000031"
            android:textColor="@android:color/white"
            android:id="@+id/button_TeamOne"
            android:padding="0dp"
            android:layout_marginRight="-4dp"
            android:text="POOL A"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            />
        <Button
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:id="@+id/button_TeamTwo"
            android:padding="0dp"
            android:layout_marginLeft="-4dp"
            android:text="POOL B"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            />
    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/layout_TeamOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Country"
                />

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="P"
                />

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="L"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="T"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NR"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pts"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NRR"
                />
        </LinearLayout>


        <ListView
            android:divider="#ffffff"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/teamOneListView" />

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/layout_TeamTwo"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="3.5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Country"
                />

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="P"
                />

            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="L"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="T"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NR"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pts"
                />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NRR"
                />
        </LinearLayout>

        <ListView
            android:dividerHeight="1dp"
            android:divider="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/teamTwoListView" />


    </LinearLayout>
</LinearLayout>