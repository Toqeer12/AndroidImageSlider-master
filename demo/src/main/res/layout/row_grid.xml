<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >





        <TextView
            android:id="@+id/match"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="March 1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/fix_up_layer"
            android:textSize="15sp" >
        </TextView>
        <TextView
            android:id="@+id/match2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="March 1"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/fix_lower_layer"

            >
        </TextView>





 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerlinear2"
        android:orientation="vertical"
        android:background="@drawable/soliddetail"
        >
<RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
       >


         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/tbd"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:layout_alignParentLeft="true"
             android:paddingTop="5dp"
             android:id="@+id/team1image"/>
         <TextView
             android:id="@+id/item_text2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:textColor="#FFFFFF"
             android:text="date time"
             android:layout_marginLeft="5dp"
             android:layout_below="@+id/team1image"
             android:textSize="15sp" >
         </TextView>

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:text="VS"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/team1image"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"

        android:text="satiem"

        android:layout_below="@+id/vs"
        android:textSize="15sp" >
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tbd"
        android:id="@+id/team2image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/item_text22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:text="date time"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/team2image"
        android:textSize="15sp" >
    </TextView>
 </RelativeLayout>

</LinearLayout>


</LinearLayout>